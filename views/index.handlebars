<div class="container-fluid">
    <h1>Eat-Da-Burger</h1>
    <div>
        <img src="/assets/img/burger.png" class="burgerimg" alt="deconstructed burger">

    </div>
    <div class="row">
        <div class="col-sm border">
            <h4>My Yummy Burgers</h4>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <p>
                        {{this.burger_name}}

                        <button class="eatburger" data-id={{this.id}}>Eat Burger</button>
                    </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-sm border">
            <h4>Add a New Burger</h4>
            <form class="addBurger">
                <textarea type="text" name="burger" class="newBurger"></textarea>
                <button type="submit" class="createBurger"> Add Burger</button>
            </form>
        </div>

        <div class="col-sm border">
            <h4> Yummy Burgers in My Belly!</h4>
            <ul class="eatenBurgers">

                {{#each burgers}}
                {{#if this.devoured}}

                <li>
                    <p>
                        {{this.burger_name}}
                        <button class="deleteburger" data-id={{this.id}}>Delete Burger</button>
                    </p>
                </li>
                {{/if}}
                {{/each}}


            </ul>
        </div>
    </div>



</div>